<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" style="-fx-padding: 20; -fx-background-color: #ADD8E6;" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.managementsystem.CustomerDialogController">
    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Customer Details" GridPane.columnSpan="2" GridPane.halignment="CENTER" />

    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="License Number:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="licenseField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="5">
        <Button onAction="#handleCancel" style="-fx-background-color: RED;" text="Cancel" />
        <Button onAction="#handleSave" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Save" />
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
