<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" style="-fx-padding: 20; -fx-background-color: #ADD8E6;" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.managementsystem.VehicleDialogController">

    <Label text="Brand:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="brandField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Model:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="modelField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="categoryCombo" prefHeight="25.0" prefWidth="149.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Year:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Price/Day:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="statusCombo" prefHeight="25.0" prefWidth="149.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button onAction="#handleCancel" style="-fx-background-color: RED;" text="Cancel" />
        <Button onAction="#handleSave" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Save" />
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
